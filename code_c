#include <stdio.h>

int
main ()
{
  int i, j, k;
  int n = 4;
  for (i = 0; i < n - 1; i++)
	{
	  printf ("* ");
	  for (j = 1; j < i; j++)
		{
		  printf ("%d ", j);

		}
	  for (j = i; j >= 1; j--)
		{
		  printf ("%d ", j);
		}
	  if (i > 0)
		printf ("*");
	  printf ("\n");

	}
  for (i = n - 1; i >= 0; i--)
	{
	  printf ("* ");
	  for (j = 1; j < i; j++)
		{
		  printf ("%d ", j);
		}
	  for (j = i; j >= 1; j--)
		{
		  printf ("%d ", j);
		}
	  if (i > 0)
		printf ("* ");
	  printf ("\n");

	}


  return 0;
}
